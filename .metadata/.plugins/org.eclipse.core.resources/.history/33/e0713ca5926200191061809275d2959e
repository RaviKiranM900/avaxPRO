package com.avaxpro.controllers;

import java.util.ArrayList;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.avaxpro.entities.Employee;
import com.portal.service.IPPortalEmployeeService;

@RestController
@RequestMapping("/api/ipportal")
public class IPPortalEmployeeController {
	
	@Autowired
	private IPPortalEmployeeService ipPortalEmpService;
    @GetMapping("/getallemployeelist")
    //@RequestMapping(value="/", method = RequestMethod.GET)
    public ArrayList<Employee> getAllEmployeeList() {
    	
    	return ipPortalEmpService.getAllEmployeeList();
       
    }

   
}